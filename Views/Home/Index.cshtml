@model IEnumerable<BlogdOferta.Models.OfertasXCate>
@{
    ViewBag.Title = "Pagina Principal";
}

<div class="jumbotron">
    <h1>Ofertas</h1>
    <p class="lead">Esta pagina es creada para saber de las ofertas de algunos negocios</p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div class="row">
    @{
        var i = 1;
        foreach (var oferta in Model)
        {
            if (i == 4)
            {
                @:</div>
                @:<div class="row">
            }
            i += 1;
            <div class="col-md-4">
                <h2> @Html.ActionLink(oferta.DescripcionOfer, "Ofertas", "Oferta", new { id = oferta.OfertaID }, null)</h2>
    <p>

         @oferta.ImagenNeg
    </p>
                <p class="btn btn-default">@Html.ActionLink("Ver Detalle", "Ofertas", "Ofertas", new { id = oferta.OfertaID }, null)</p>

                
        
                    </div>
            }
        }
            </div>
