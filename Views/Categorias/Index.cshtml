@model IEnumerable<BlogdOferta.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <tr class="warning">
            <th>
                @Html.DisplayNameFor(model => model.NomCate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoCate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacionCate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomCate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoCate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCreacionCate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoriaID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CategoriaID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoriaID })
                </td>
            </tr>
        }

    </table>
    </div>